{
	"grammar": "main",

	"aliases": [
		{ "identifier": "^[A-Za-z_]+\\w*$" },
		{ "dot_path": "^([^\\W\\d]{1}\\w*)+(\\.[^\\W\\d]{1}\\w*)*$" },
		{ "function": "function.*" }
	],

	"tokens": [
		{
			/* {#view AppView context} */
			"name": "view",
			"pattern": [
				{ "view": "token" },
				"\\s+",
				{ "$identifier": "name" },
				"\\s+",
				{ "$identifier": "context_name" }
			]
		},
		{
			/* {#text letter.letter} */
			"name": "text-binding",
			"pattern": [
				{ "text": "token" },
				"\\s+",
				{ "$dot_path": "property" }
			]
		},
		{
			/* {#event click function(event) { context.letterize(stringInput.node.value); }} */
			"name": "event",
			"pattern": [
				{ "event": "token" },
				"\\s+",
				{ "$identifier": "name" },
				"\\s+",
				{ "$function": "handler" }
			]
		},
		{
			/* {#collection context.letters function(letter) { return pw.LetterView(letter); }} */
			"name": "collection",
			"pattern": [
				{ "collection": "token" },
				"\\s+",
				{ "$identifier": "collection" },
				"\\s+",
				{ "$function": "conversion" }
			]
		},
		{
			/* {#ref stringInput} */
			"name": "ref",
			"pattern": [
				{ "ref": "token" },
				"\\s+",
				{ "\\w+": "reference" }
			]
		},
	]
}
